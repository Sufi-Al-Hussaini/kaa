<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	   xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
	   jxb:extensionBindingPrefixes="xjc"
           jxb:version="2.0"
 elementFormDefault="qualified">

<xs:annotation>
   <xs:appinfo>
      <jxb:globalBindings>
          <xjc:serializable uid="1"/>
      </jxb:globalBindings>
   </xs:appinfo>
</xs:annotation>

<xs:simpleType name="platform">
  <xs:restriction base="xs:string">
    <xs:enumeration value="ANDROID"/>
    <xs:enumeration value="JAVA"/>
    <xs:enumeration value="CPP"/>
    <xs:enumeration value="C"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="feature">
  <xs:restriction base="xs:string">
    <xs:enumeration value="CONFIGURATION"/>
    <xs:enumeration value="PROFILING"/>
    <xs:enumeration value="NOTIFICATION"/>
    <xs:enumeration value="EVENT"/>
    <xs:enumeration value="USER_VERIFIER"/>
    <xs:enumeration value="DATA_COLLECTION"/>
  </xs:restriction>
</xs:simpleType>

<xs:complexType name="project">
  <xs:sequence>
    <xs:element name="name" type="xs:string"/>
    <xs:element name="description" type="xs:string"/>
    <xs:element name="details" type="xs:string"/> 
    <xs:element name="iconBase64" type="xs:string"/>
    <xs:element name="platform" type="platform"/>
    <xs:element name="features">
        <xs:simpleType>
           <xs:list itemType="feature"/>
        </xs:simpleType>
    </xs:element>
    <xs:element name="sourceArchive" type="xs:string"/>
    <xs:element name="projectFolder" type="xs:string"/>
    <xs:element name="sdkLibDir" type="xs:string"/>
    <xs:element name="destBinaryFile" type="xs:string"/>
    <xs:element name="sdkKeyBase64" type="xs:string"/>
  </xs:sequence>
  <xs:attribute name="id" type="xs:string" use="required"/>
</xs:complexType>
 
<xs:element name="projectsConfig">
   <xs:complexType>
     <xs:sequence>
       <xs:element name="project" type="project" minOccurs="1" maxOccurs="unbounded">
	 <xs:annotation>
           <xs:appinfo>
              <jxb:property name="projects"/>
           </xs:appinfo>
         </xs:annotation>
       </xs:element>
     </xs:sequence>
   </xs:complexType>
</xs:element>

<xs:element name="project" type="project"/>
 
</xs:schema>